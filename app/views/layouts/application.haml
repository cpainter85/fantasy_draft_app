!!!html
%html
  %head
    %title FantasyDraftApp
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    = render 'layouts/nav'

    -if notice
      .alert.alert-success
        =notice

    -if flash[:error]
      .alert.alert-danger
        =flash[:error]
    = yield
